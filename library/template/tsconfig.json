{
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*", "./node_modules/**.*", "./types/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "/*?universal": ["src/*"],
      "/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "downlevelIteration": true
  }
}
